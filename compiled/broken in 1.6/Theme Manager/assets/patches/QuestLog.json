{
	"ID": "QuestLog",

	"Variables": {
		"$QuestLogText": "$Text",
		"$QuestLogHover": "$Hover"
	},

	"Patches": {
		"#QuestLog:draw(SpriteBatch)": {
			"Colors": {
				"Wheat": { "*": "$QuestLogHover" },
				"DarkBlue": { "*": "$QuestObjectiveText" },
				"Red": { "*": "$QuestBarIncomplete" },
				"DarkRed": { "*": "$QuestBarIncompleteDark" },
				"LimeGreen": { "*": "$QuestBarComplete" },
				"Green": { "*": "$QuestBarCompleteDark" }
			},

			"Fields": {
				"textColor": { "*": "$QuestLogText" }
			}
		}
	}
}
