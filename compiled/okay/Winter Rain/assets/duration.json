{
    "Changes": [
        // duration
        {
            // snow
            "Action": "EditData",
            "When": {
                "Query: {{Day}} +2 >= {{SnowDurationStart}} AND {{Day}} +2 <= {{SnowDurationEnd}}": true
            },
            "Target": "Data/LocationContexts",
            "TargetField": [ "Default", "WeatherConditions", "WinterSnow"], // Id: "WinterSnow"
            "Entries": {
                "Condition": "SEASON winter, SYNCED_RANDOM day location_weather {{ChanceToSnow_duration}}",
            }
        },
        {
            // rain
            "Action": "EditData",
            "When": {
                "Query: {{Day}} +2 >= {{SnowDurationStart}} AND {{Day}} +2 <= {{SnowDurationEnd}}": false
            },
            "Target": "Data/LocationContexts",
            "TargetField": [ "Default", "WeatherConditions", "WinterSnow"], // Id: "WinterSnow"
            "Entries": {
                "Id": "WinterRain",
                "Condition": "SEASON winter, SYNCED_RANDOM day location_weather {{ChanceToRain_duration}}",
                "Weather": "Rain"
            }
        },
    ]
}