{
	"ID": "LoadGameMenu",

	"ColorVariables": {
		"$LoadGameErrorText": "$ErrorText",
		"$LoadGameHover": "$Hover"
	},

	"Patches": {
		"#LoadGameMenu+SaveFileSlot:drawVersionMismatchSlot": {
			"Colors": {
				"Red": { "*": "$LoadGameErrorText" }
			}
		},

		"#LoadGameMenu:drawSlotBackground": {
			"Colors": {
				"Wheat": { "*": "$LoadGameHover" }
			}
		}
	}
}
