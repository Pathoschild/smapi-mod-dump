<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Name>Crystalline Junimo Chests</Name>
    <Description>Adds enhanced Junimo Chests which can access multiple inventories depending on their color.</Description>
    <Version>1.1.0</Version>
    <RootNamespace>StardewMods.CrystallineJunimoChests</RootNamespace>
    <UniqueId>furyx639.CrystallineJunimoChests</UniqueId>
    <UpdateKeys>Nexus:20658</UpdateKeys>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Pathoschild.Stardew.ModTranslationClassBuilder" Version="2.0.1"/>
    <PackageReference Include="SimpleInjector">
      <HintPath>$(GameModsPath)\FauxCore\SimpleInjector.dll</HintPath>
      <Version>5.4.5</Version>
      <Private>false</Private>
    </PackageReference>
  </ItemGroup>
  <ItemGroup>
    <SMAPIDependency Include="furyx639.FauxCore" Version="1.2.0" required="true"/>
    <SMAPIDependency Include="furyx639.ExpandedStorage" Version="3.1.0" required="true"/>
    <SMAPIDependency Include="furyx639.BetterChests" Version="2.19.0" required="false"/>
    <SMAPIDependency Include="spacechase0.GenericModConfigMenu" Version="1.12.0" required="false"/>
  </ItemGroup>
</Project>
