<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Name>FauxCore</Name>
    <Description>Framework that provides shared functionality for all of my mods.</Description>
    <Version>1.2.0</Version>
    <EnableHarmony>true</EnableHarmony>
    <RootNamespace>StardewMods.FauxCore</RootNamespace>
    <UniqueId>furyx639.FauxCore</UniqueId>
    <UpdateKeys>Nexus:20618</UpdateKeys>
    <BundleExtraAssemblies>ThirdParty</BundleExtraAssemblies>
    <IgnoreModFilePatterns>
      ^JetBrains,
      ^NetEscapades
    </IgnoreModFilePatterns>
  </PropertyGroup>
  <PropertyGroup>
    <DefineConstants>IS_FAUXCORE</DefineConstants>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Pathoschild.Stardew.ModTranslationClassBuilder" Version="2.0.1"/>
    <PackageReference Include="Pidgin" Version="3.2.3" />
    <PackageReference Include="SimpleInjector" Version="5.4.5" />
    <Reference Include="HarmonyLib">
      <HintPath>$(GamePath)\smapi-internal\0Harmony.dll</HintPath>
      <Private>false</Private>
    </Reference>
  </ItemGroup>
  <ItemGroup>
    <SMAPIDependency Include="spacechase0.GenericModConfigMenu" Version="1.12.0" required="false"/>
  </ItemGroup>
</Project>
