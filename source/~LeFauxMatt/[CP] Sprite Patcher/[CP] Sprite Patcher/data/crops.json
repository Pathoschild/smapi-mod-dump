                    "Area": {"X": 0, "Y": 0, "Width": 256, "Height": 1024},
                    "DrawMethods": ["World"],
                    "PatchMode": "Overlay",
                    "Code": "
                    if (entity is not HoeDirt { crop: { } crop } hoeDirt) return;
                    var xOffset = GetOrSetData(`{{ModId}}/XOffset`, Game1.random.Next(-4, 4));
