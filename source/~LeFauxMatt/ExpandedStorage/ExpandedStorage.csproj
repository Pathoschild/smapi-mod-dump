<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Name>Expanded Storage</Name>
    <Description>Framework for adding new types of chests to the game.</Description>
    <Version>3.1.0</Version>
    <EnableHarmony>true</EnableHarmony>
    <RootNamespace>StardewMods.ExpandedStorage</RootNamespace>
    <UniqueId>furyx639.ExpandedStorage</UniqueId>
    <UpdateKeys>Nexus:7431</UpdateKeys>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\FauxCore\FauxCore.csproj" Private="false"/>
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Pathoschild.Stardew.ModTranslationClassBuilder" Version="2.0.1"/>
    <PackageReference Include="SimpleInjector">
      <HintPath>$(GameModsPath)\FauxCore\SimpleInjector.dll</HintPath>
      <Version>5.4.5</Version>
      <Private>false</Private>
    </PackageReference>
    <Reference Include="HarmonyLib">
      <HintPath>$(GamePath)\smapi-internal\0Harmony.dll</HintPath>
      <Private>false</Private>
    </Reference>
  </ItemGroup>
  <ItemGroup>
    <SMAPIDependency Include="furyx639.FauxCore" Version="1.2.0" required="true"/>
    <SMAPIDependency Include="spacechase0.GenericModConfigMenu" Version="1.12.0" required="false"/>
  </ItemGroup>
</Project>
