<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
	  <LangVersion>latest</LangVersion>
	  <GamePath>D:\SteamLibrary\steamapps\common\Stardew Valley</GamePath>
	  <EnableHarmony>true</EnableHarmony>
