<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<AssemblyName>AwesomeAlchemy</AssemblyName>
		<RootNamespace>DaLion.Stardew.Alchemy</RootNamespace>
		<Version>1.0.0</Version>
		<TargetFramework>net5.0</TargetFramework>
		<EnableHarmony>true</EnableHarmony>
	</PropertyGroup>

	<PropertyGroup>
		<LangVersion>latest</LangVersion>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="JetBrains.Annotations" Version="2021.3.0" />
		<PackageReference Include="Pathoschild.Stardew.ModBuildConfig" Version="4.0.0" />
	</ItemGroup>

	<ItemGroup>
		<Reference Include="SpaceCore">
			<HintPath>"SpaceCore.dll" </HintPath>
			<Private>false</Private>
		</Reference>
	</ItemGroup>

	<Import Project="..\Common\Common.projitems" Label="Shared" Condition="Exists('..\Common\Common.projitems')" />

	<ItemGroup>
		<Compile Remove="resources\**" />
		<EmbeddedResource Remove="resources\**" />
		<None Remove="resources\**" />
	</ItemGroup>

	<ItemGroup>
	  <Folder Include="Framework\Events\" />
	  <Folder Include="Framework\Patches\" />
	</ItemGroup>
</Project>
