<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <Version>1.1.4-beta.1</Version>
        <TargetFramework>net5.0</TargetFramework>
        <EnableHarmony>true</EnableHarmony>
        <PackageId>MarketDay</PackageId>
        <RootNamespace>MarketDay</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Pathoschild.Stardew.ModBuildConfig" Version="4.0.1" />
        <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
    </ItemGroup>
    <ItemGroup>
        <Reference Include="ContentPatcher">
            <HintPath>$(GamePath)\Mods\ContentPatcher\ContentPatcher.dll</HintPath>
            <Private>False</Private>
        </Reference>
    </ItemGroup>
    <ItemGroup>
        <Reference Include="MailFrameworkMod">
            <SpecificVersion>False</SpecificVersion>
            <HintPath>$(GamePath)\Mods\MailFrameworkMod\MailFrameworkMod.dll</HintPath>
            <Private>False</Private>
        </Reference>
    </ItemGroup>
</Project>
