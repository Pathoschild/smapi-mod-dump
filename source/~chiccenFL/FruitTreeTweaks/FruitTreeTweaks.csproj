<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Version>1.0.0</Version>
    <TargetFramework>net6.0</TargetFramework>
	<EnableHarmony>true</EnableHarmony>
	<Platforms>AnyCPU;x64</Platforms>
	  <OutputPath>..\__releases\</OutputPath>
	  <IntermediateOutputPath>$(MSBuildProjectDirectory)\obj\</IntermediateOutputPath>
	  <PackageLicenseFile>LICENSE</PackageLicenseFile>
  </PropertyGroup>
  <ItemGroup>
    <Compile Remove="__releases\**" />
    <EmbeddedResource Remove="__releases\**" />
    <None Remove="__releases\**" />
  </ItemGroup>
  <ItemGroup>
    <None Remove="PatchingNotes.txt" />
    <None Remove="Stardew-Valley.pdb" />
    <None Remove="TO-DO.txt" />
  </ItemGroup>
  <ItemGroup>
    <AdditionalFiles Include="i18n\default.json" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Lib.Harmony" Version="2.3.3" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="Pathoschild.Stardew.ModBuildConfig" Version="4.1.1" />
    <PackageReference Include="Pathoschild.Stardew.ModTranslationClassBuilder" Version="2.0.1" />
  </ItemGroup>

  <ItemGroup>
    <None Update="manifest.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
</Project>