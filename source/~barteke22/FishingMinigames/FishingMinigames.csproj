<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <RootNamespace>FishingMinigames</RootNamespace>
    <AssemblyName>FishingMinigames</AssemblyName>
    <Version>1.0.0</Version>
    <EnableHarmony>true</EnableHarmony>
    <TargetFramework>net6.0</TargetFramework>
    <LangVersion>Latest</LangVersion>
    <GamePath>D:\Programs\Steam\steamapps\common\Stardew Valley 1.6.3</GamePath>
    <GameModsPath>D:\Programs\Steam\steamapps\common\Stardew Valley 1.6.3\Mods</GameModsPath>
  </PropertyGroup>
  <ItemGroup>
    <Compile Remove="assets\audio\source\**" />
    <EmbeddedResource Remove="assets\audio\source\**" />
    <None Remove="assets\audio\source\**" />
  </ItemGroup>
  <ItemGroup>
    <None Include="i18n\default.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
  <ItemGroup>
    <None Include="manifest.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
  <ItemGroup>
    <Content Include="assets\bait_magnet.png" />
    <Content Include="assets\rod_farmer.png" />
    <Content Include="assets\rod_sprites.png" />
    <Content Include="assets\tackle_basic.png" />
    <Content Include="assets\tackle_curiosity.png" />
    <Content Include="assets\tackle_quality.png" />
    <Content Include="assets\tackle_spinners.png" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Pathoschild.Stardew.ModBuildConfig" Version="4.1.1" />
  </ItemGroup>
  <ItemGroup>
    <None Update="config info readme.txt">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="i18n\pl.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
</Project>