<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
	  <AssemblyName>MachineAugmentors</AssemblyName>
	  <RootNamespace>MachineAugmentors</RootNamespace>
	  <Version>1-sully</Version>
	  <TargetFramework>net5.0</TargetFramework>
	  <LangVersion>latest</LangVersion>
	  <ImplicitUsings>enable</ImplicitUsings>
	  <EnableHarmony>true</EnableHarmony>
  </PropertyGroup>
	
  <ItemGroup>
    <None Include="assets\custom_machines.json" />
    <None Include="i18n\de.json" />
    <None Include="i18n\default.json" />
    <None Include="i18n\es.json" />
    <None Include="i18n\fr.json" />
    <None Include="i18n\ja.json" />
    <None Include="i18n\ko.json" />
    <None Include="i18n\pt.json" />
    <None Include="i18n\ru.json" />
    <None Include="i18n\zh.json" />
    <None Include="manifest.json" />
  </ItemGroup>
	
  <ItemGroup>
    <Folder Include="Properties\" />
  </ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Win32.Registry" Version="5.0.0" />
		<PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
		<PackageReference Include="Pathoschild.Stardew.ModBuildConfig" Version="4.0.1" />
	</ItemGroup>

	<ItemGroup>
		<Using Include="StardewValley.Object" Alias="SObject" />
		<Using Include="StardewValley" />
		<Using Include="StardewModdingAPI" />
		<Using Include="StardewModdingAPI.Events" />
	</ItemGroup>
</Project>