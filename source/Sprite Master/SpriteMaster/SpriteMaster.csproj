<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
	<Import Project="$(SolutionDir)SpriteMasterCommon.props" />

	<PropertyGroup>
		<AssemblyName>SpriteMaster</AssemblyName>
		<EnableHarmony>true</EnableHarmony>
		<RunPostBuildEvent>OnBuildSuccess</RunPostBuildEvent>
		<NoWarn>0162;7035</NoWarn>
		<IgnoreModFilePatterns>$(IgnoreModFilePatterns), \.dll\.config$, ILMerge, runtimes, net452, net450, net45</IgnoreModFilePatterns>
		<Configurations>Debug;Release;Development</Configurations>
		<AssemblyVersion>0.13.0.*</AssemblyVersion>
		<FileVersion>0.13.0.0</FileVersion>
		<Version>0.13.0</Version>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
		<DefineConstants>TRACE</DefineConstants>
		<DebugSymbols>true</DebugSymbols>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Development|AnyCPU'">
		<DefineConstants>DEBUG;TRACE</DefineConstants>
		<DebugSymbols>true</DebugSymbols>
		<Optimize>true</Optimize>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
		<DebugSymbols>true</DebugSymbols>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="LZMA-SDK" Version="19.0.0" />
		<PackageReference Include="Microsoft.Win32.Registry" Version="5.0.0" />
		<PackageReference Include="Pathoschild.Stardew.ModBuildConfig" Version="4.0.0-beta.20210916" />
		<PackageReference Include="System.Runtime.Caching" Version="5.0.0" />
		<PackageReference Include="TeximpNet" Version="1.4.3" />
		<PackageReference Include="Tomlyn" Version="0.1.2" />
		<PackageReference Include="ZstdNet" Version="1.4.5" />
	</ItemGroup>

	<ItemGroup>
		<None Include="$(SolutionDir)\LICENSE.MD">
			<Pack>True</Pack>
			<PackagePath></PackagePath>
		</None>
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="$(SolutionDir)\Runtime\Runtime.csproj" />
		<ProjectReference Include="$(SolutionDir)\xBRZNet\xBRZ.csproj" />
	</ItemGroup>
	
	<Target Name="PostBuild" AfterTargets="PostBuildEvent">
		<Exec Command="copy /D /V /Y /L $(SolutionDir)Libraries\* $(OutDir)\." />
	</Target>

	<ItemGroup>
		<Reference Update="Stardew Valley">
			<Aliases>destination</Aliases>
		</Reference>
	</ItemGroup>

</Project>