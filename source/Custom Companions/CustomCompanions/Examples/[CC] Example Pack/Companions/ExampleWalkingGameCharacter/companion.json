  "UpAnimation": {
    "StartingFrame": 8,
    "NumberOfFrames": 4,
    "Duration": 100,

    "IdleAnimation": {
      "StartingFrame": 8,
      "NumberOfFrames": 1,
      "Duration": 500
    }
  },

  // This plays when the companion travels downwards
  "DownAnimation": {
    "StartingFrame": 0,
    "NumberOfFrames": 4,
    "Duration": 100,

    "IdleAnimation": {
      "StartingFrame": 24,
      "NumberOfFrames": 4,
      "Duration": 500
    }
  },

  // This plays when the companion travels left
  "LeftAnimation": {
    "StartingFrame": 12,
    "NumberOfFrames": 4,
    "Duration": 100,

    "IdleAnimation": {
      "StartingFrame": 12,
      "NumberOfFrames": 1,
      "Duration": 500
    }
  },

  // This plays when the companion travels right
  "RightAnimation": {
    "StartingFrame": 4,
    "NumberOfFrames": 4,
    "Duration": 100,

