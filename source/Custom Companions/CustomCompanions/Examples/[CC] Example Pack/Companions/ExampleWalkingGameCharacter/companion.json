{
  "Name": "ExampleWalkingGameCharacter",
  "Type": "Walking",
  "TravelSpeed": 4,
  "SpawnOffsetX": 0,
  "SpawnOffsetY": 0,
  "IdleBehavior": "Nothing",

  "Colors": [
    [ 255, 255, 255, 255 ],
    [ 255, 198, 0, 255 ],
    [ 129, 198, 225, 130 ]
  ],
  "IsPrismatic": true, // Causes the companion's colors to change like a Prismatic Slime | NOTE: If Colors contains any values, then the companion will randomly be pick a color or prismatic

