  </PropertyGroup>

  <ItemGroup>
    <Compile Include="..\Helpers\IGenericModConfigMenuApi.cs" Link="IGenericModConfigMenuApi.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Pathoschild.Stardew.ModBuildConfig" Version="4.1.1" />
  </ItemGroup>

</Project>
