<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="..\Build\SDV-1.5.6.targets" />
  <Import Project="..\Build\Common.csproj" />
  <Import Project="..\DecidedlyShared\DecidedlyShared.projitems" Label="Shared" />

  <PropertyGroup>
    <Name>Smart Cursor</Name>
    <Description>Mine like you're in Terraria using the smart cursor feature.</Description>
    <MinimumApiVersion>3.15.0</MinimumApiVersion>
    <UpdateKeys>Nexus:13268</UpdateKeys>
    <Version>1.1.1</Version>
  </PropertyGroup>

  <PropertyGroup>
    <EnableHarmony>false</EnableHarmony>
  </PropertyGroup>

  <Target AfterTargets="Build" Name="OpenZipDirectory">
    <Message Text="Mod ZIP exported to: $(ModZipPath)" Condition="'$(EnableModZip)' == 'True'"/>
  </Target>

</Project>
