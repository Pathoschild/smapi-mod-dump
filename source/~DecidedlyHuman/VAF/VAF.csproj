<Project Sdk="Microsoft.NET.Sdk">
    <Import Project="..\Build\1.6-alpha.targets"/>
    <Import Project="..\Build\Common.csproj"/>
    <Import Project="..\DecidedlyShared\DecidedlyShared.projitems" Label="Shared"/>

    <PropertyGroup>
        <Name>Voice Acting Framework</Name>
        <Description>Voice acting, in my Stardew? Yes!</Description>
        <MinimumApiVersion>3.15.0</MinimumApiVersion>
        <UpdateKeys>Nexus:00000</UpdateKeys>
        <Version>1.0.0-alpha</Version>
        <LangVersion>Latest</LangVersion>
    </PropertyGroup>

    <PropertyGroup>
        <EnableHarmony>false</EnableHarmony>
    </PropertyGroup>

    <PropertyGroup>
        <GameModsPath>$(GameModsPath)/VoiceActingFramework/</GameModsPath>
        <_PackOutputLocation>$(GameModsPath)</_PackOutputLocation>
    </PropertyGroup>

    <ItemGroup>
        <None Remove="i18n\default.json"/>
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\VAFPackFormat\VAFPackFormat.csproj"/>
    </ItemGroup>

    <ItemGroup>
        <Folder Include="packs"/>
    </ItemGroup>

    <Target Name="BeforeBuild" BeforeTargets="Build">
        <Message Text="Removing previously deployed content pack..."/>
        <RemoveDir Directories="$(_PackOutputLocation)"/>
    </Target>

    <Target Name="DeployPack" AfterTargets="Build">
        <Message Text="Running DeployPack target..."/>
        <ItemGroup>
            <_FilesToCopy Exclude="$(ProjectDir)packs/**/*.aseprite" Include="$(ProjectDir)packs/**/*"/>
        </ItemGroup>

        <Copy SourceFiles="@(_FilesToCopy)" DestinationFiles="@(_FilesToCopy->'$(_PackOutputLocation)%(RecursiveDir)%(Filename)%(Extension)')"/>
        <!-- Use ZipDirectory after build. -->
    </Target>

</Project>
