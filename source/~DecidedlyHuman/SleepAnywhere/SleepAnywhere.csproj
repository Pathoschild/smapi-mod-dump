<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<AssemblyName>$(ProjectName)</AssemblyName>
		<RootNamespace>SleepAnywhere</RootNamespace>
		<DefaultNamespace>SleepAnywhere</DefaultNamespace>
		<Version>1.0.0-dev</Version>
		<TargetFramework>net5.0</TargetFramework>
		<GameModsPath>C:\Development\Stardew Valley\Stardew Valley-1.5.6-hotfix3_SMAPI 3.13.14\Code\Stardew Valley\bin\Release\Mods\SleepAnywhere</GameModsPath>
		<_PackOutputLocation>$(GameModsPath)/</_PackOutputLocation>
	</PropertyGroup>

	<!-- ModBuildConfig settings. -->
	<Import Project="..\Build\Latest.targets" />

	<ItemGroup>
		<PackageReference Include="Pathoschild.Stardew.ModBuildConfig" Version="4.0.0" />
	</ItemGroup>

	<PropertyGroup>
		<EnableHarmony>true</EnableHarmony>
		<IgnoreModFilePatterns>\.aseprite$</IgnoreModFilePatterns>
		<Nullable>enable</Nullable>
	</PropertyGroup>

	<Target Name="DeployPack" AfterTargets="Build">
		<Message Text="Running DeployPack target..." />
		<ItemGroup>
			<_FilesToCopy Exclude="$(ProjectDir)pack/**/*.aseprite" Include="$(ProjectDir)pack/**/*" />
		</ItemGroup>

		<Copy SourceFiles="@(_FilesToCopy)" DestinationFiles="@(_FilesToCopy->'$(_PackOutputLocation)%(RecursiveDir)%(Filename)%(Extension)')" />
		<!-- Use ZipDirectory after build. -->
	</Target>

</Project>
