<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
	  <AssemblyName>ProfitCalculatorDGA</AssemblyName>
	  <RootNamespace>ProfitCalculatorDGA</RootNamespace>
	  <Version>1.0.0</Version>
	  <EnableHarmony>true</EnableHarmony>
	  <GamePath>$(STARDEW_GAME_DIR)</GamePath>
  </PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
		<PackageReference Include="Pathoschild.Stardew.ModBuildConfig" Version="4.1.1" />
		<Reference Include="DynamicGameAssets">
			<HintPath>$(GameModsPath)\DynamicGameAssets\DynamicGameAssets.dll</HintPath>
			<Private>false</Private>
		</Reference>
	</ItemGroup>
</Project>
