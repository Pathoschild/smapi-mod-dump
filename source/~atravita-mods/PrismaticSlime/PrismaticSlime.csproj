<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="..\csproj_common" />

  <PropertyGroup>
    <EnableHarmony>True</EnableHarmony>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <PropertyGroup>
    <Name>Prismatic Slimes in Slime Hutch.</Name>
    <Description>Allows you to raise prismatic slimes in the slime hutch.</Description>
    <UpdateKeys>Nexus:15157</UpdateKeys>
    <Version>0.1.0</Version>
    <BaseManifest>..\ja_dependencies.json</BaseManifest>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="HarmonyPatches\SlimeBallPatches\**" />
    <EmbeddedResource Remove="HarmonyPatches\SlimeBallPatches\**" />
    <None Remove="HarmonyPatches\SlimeBallPatches\**" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="JetBrains.Annotations" Version="2022.3.1" />
    <PackageReference Include="Microsoft.Win32.Registry" Version="5.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\AtraCore\AtraCore.csproj" private="false" />
    <ProjectReference Include="..\Pintail\Pintail\Pintail.csproj" private="false" />
  </ItemGroup>

  <ItemGroup>
    <Using Include="StardewValley" />
    <Using Include="StardewModdingAPI" />
    <Using Include="System.Diagnostics.CodeAnalysis" />
    <Using Include="JetBrains.Annotations" />
    <Using Alias="NotNullAttribute" Include="System.Diagnostics.CodeAnalysis.NotNullAttribute" />
    <Using Alias="Object" Include="System.Object" />
    <Using Alias="SObject" Include="StardewValley.Object" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="assets\textures\" />
  </ItemGroup>

</Project>
