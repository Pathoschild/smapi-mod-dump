<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<PropertyGroup>
		<AssemblyName>PrismaticPride</AssemblyName>
		<RootNamespace>PrismaticPride</RootNamespace>
		<Version>1.1.0</Version>
		<EnableHarmony>true</EnableHarmony>
	</PropertyGroup>
	<PropertyGroup>
		<LangVersion>9.0</LangVersion>
		<TargetFramework>net452</TargetFramework>
		<IgnoreModFilePatterns>[.](svg|xcf)$</IgnoreModFilePatterns>
		<GameModsPath>bin/Mods</GameModsPath>
	</PropertyGroup>
	<ItemGroup Label="extra-mods">
		<ExtraModItem Include="packs/JA/manifest.json">
			<Link>PrismaticPride.JA/manifest.json</Link>
		</ExtraModItem>
		<ExtraModItem Include="packs/JA/Boots/PrismaticBoots/boots.json">
			<Link>PrismaticPride.JA/Boots/PrismaticBoots/boots.json</Link>
		</ExtraModItem>
		<ExtraModItem Include="packs/JA/Boots/PrismaticBoots/boots.png">
			<Link>PrismaticPride.JA/Boots/PrismaticBoots/boots.png</Link>
		</ExtraModItem>
		<ExtraModItem Include="packs/JA/Boots/PrismaticBoots/color.png">
			<Link>PrismaticPride.JA/Boots/PrismaticBoots/color.png</Link>
		</ExtraModItem>
		<ExtraModItem Include="packs/STF/manifest.json">
			<Link>PrismaticPride.STF/manifest.json</Link>
		</ExtraModItem>
		<ExtraModItem Include="packs/STF/shops.json">
			<Link>PrismaticPride.STF/shops.json</Link>
		</ExtraModItem>
		<ExtraModItem Include="packs/STF/portrait.png">
			<Link>PrismaticPride.STF/portrait.png</Link>
		</ExtraModItem>
	</ItemGroup>
	<ItemGroup>
		<PackageReference Include="Pathoschild.Stardew.ModBuildConfig" Version="3.3.0" />
	</ItemGroup>
	<Import Project="extra-mods.projitems" Label="Shared" />
</Project>
