      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="assets\HaxorSprinkler.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="i18n\default.json">
